<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EDE7F6"
    tools:context="com.example.flicksclick.MovieDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/ivMovieImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/placeholder_img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Finding Dory"
        android:id="@+id/tvMovieName"
        android:layout_below="@+id/ivMovieImage"
        android:layout_alignLeft="@+id/ivMovieImage"
        android:layout_alignStart="@+id/ivMovieImage"
        android:layout_alignRight="@+id/ivMovieImage"
        android:layout_alignEnd="@+id/ivMovieImage"
        android:textColor="#263238"
        android:textSize="@dimen/activity_title_size_bold"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbMovieRatings"
        android:layout_below="@+id/tvMovieName"
        android:layout_alignLeft="@+id/tvMovieName"
        android:layout_alignStart="@+id/tvMovieName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016-06-23"
        android:id="@+id/tvMovieReleaseDate"
        android:layout_alignLeft="@+id/rbMovieRatings"
        android:layout_alignStart="@+id/rbMovieRatings"
        android:layout_below="@+id/rbMovieRatings"
        android:layout_alignRight="@+id/tvMovieName"
        android:layout_alignEnd="@+id/tvMovieName"
        android:textColor="#263238"
        android:textSize="@dimen/activity_overview_size_big"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set after the events of Continental Drift, Scrat's epic pursuit of his elusive acorn catapults him outside of Earth, where he accidentally sets off a series of cosmic events that transform and threaten the planet. To save themselves from peril, Manny, Sid, Diego, and the rest of the herd leave their home and embark on a quest full of thrills and spills, highs and lows, laughter and adventure while traveling to exotic new lands and encountering a host of colorful new characters."
        android:id="@+id/tvMoviesOverview"
        android:layout_alignLeft="@+id/tvMovieReleaseDate"
        android:layout_alignStart="@+id/tvMovieReleaseDate"
        android:layout_below="@+id/tvMovieReleaseDate"
        android:layout_alignRight="@+id/tvMovieReleaseDate"
        android:layout_alignEnd="@+id/tvMovieReleaseDate"
        android:textColor="#263238"
        android:textSize="@dimen/activity_overview_size_big"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
